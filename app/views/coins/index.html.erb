<h1>Moedas</h1>
<h2><%= cookies[:curso] %></h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>@coins.human_attribute_nome(:description)</th>
      <th>@coins.human_attribute_nome(:acronym)</th>
      <th>@coins.human_attribute_nome(:url_image)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width:35, heigth:35%></td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

